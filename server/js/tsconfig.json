{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "removeComments": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": "./src",
    "rootDir": ".",
    "paths": {
      "@api/*": ["api/*"],
      "@data/*": ["data/*"],
      "@gc-apollo/*": ["apollo/*"]
    }
  },
  "exclude": ["../node_modules", "node_modules", "src/testing"]
}
